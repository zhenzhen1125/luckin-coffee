<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>AdminLTE 2 | Starter</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
        page. However, you can choose any other skin. Make sure you
        apply the skin class to the body tag so the changes take effect.
  -->
  <link rel="stylesheet" href="/dist/css/skins/skin-blue.min.css">
  <!-- jQuery 2.2.3 -->


  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

<%- include("./header.ejs") %>
<%- include('./menu.ejs') %>

  <!-- Content Wrapper. Contains page content -->
  <!-- 标题 -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <a href="/users">
       用户管理
        <small>Optional description</small>
        </a>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
      <div class="box">
        <!-- 头部--添加用户等 -->
          <div class="box-header with-border">
            
              <h3 class="box-title pull-left">
                <a href="/users/add?pageNumber=<%- pageNumber%>">
                  <button class="btn btn-md btn-primary">
                    <span class="glyphicon glyphicon-plus"></span> 添加用户
                  </button>
                </a>
              </h3>
              <div class="input-group pull-left " style="width: 200px;margin-left: 15px;">
                  <input type="text" class="form-control" id="searchTxt" placeholder="输入您的昵称搜索" onchange="searchFn()">
                  <div class="input-group-addon btn" onclick="searchFn()">
                    <span class=" glyphicon glyphicon-search"></span>
                  </div>
                </div>
               
               
              <div class="pull-right ">
                <a href="/users/import">
                  <button class="btn btn-sm btn-link"><span class="glyphicon glyphicon-upload"></span>导入用户</button>
                </a>
                <a href="/users/exportUsers">
                  <button class="btn btn-sm btn-link"><span class="glyphicon glyphicon-download"></span>导出用户</button>
                </a>
               
                  <button class="btn btn-sm btn-danger " data-toggle="modal" data-target="#removeAll"></span>删除全部</button>
                
              </div>
             <div class="">选择年龄：
               <% for(var i=0;i<ageArr.length;i++) {%>
                <a href="/users/age?age=<%- ageArr[i] %>"><%-ageArr[i]%></a>
               <%}%>
               <a href="/users/sort?type=age&&num=1">升序排列</a>
               <a href="/users/sort?type=age&&num=-1">降序排列</a>
            </div>
           
          </div>
         
          <!-- /.box-header -->
          <div class="box-body">
            <table class="table table-bordered">
              <tbody><tr>
                <th class="col-xs-1 text-center">序号</th>
                <th class="col-xs-3 text-center">头像</th>
                <th class="col-xs-2 text-center">显示头像</th>
                <th class="col-xs-1 text-center">昵称</th>
                <th class="col-xs-3 text-center">手机</th>
                <th class="col-xs-1 text-center">年龄</th>
                <th class="col-xs-1 text-center">编辑</th>
              </tr>
             <% for (var i=0;i<data.length;i++){ %>
                <tr>
                    <td class="text-center"><%- i+1 %></td>
                    <td class="text-center">
                      <form  enctype="multipart/form-data" action="/users/upload" method="POST">
                        <input type="file" name="avatar"  class="pull-left"/>
                        <input type="text" name="tel"  class="pull-left" value='<%- data[i].tel %>'/>
                        <input type="text" name="pageNumber"  class="pull-left" value='<%- pageNumber%>'/>
                        <input type="submit" value="提交" />
                    </form>                
                    </td>
                    <td class="text-center"><img src="<%- data[i].avatar %>" alt="" style="height:50px"></td>
                    <td class="text-center"><%- data[i].nickname %></td>
                    <td class="text-center"><%- data[i].tel %></td>
                    <td class="text-center"><%- data[i].age %></td>
                    <td class="text-center">
                      <button class="btn btn-xs btn-warning"  onclick=showModal(<%- data[i].tel %>,<%- pageCode %>) ><span class="
                        glyphicon glyphicon-pencil"></span></button>
                      <!-- <a href="/users/remove?tel=<%- data[i].tel %> "> -->
                          <button class="btn btn-xs btn-danger"  onclick=removeModal("<%- data[i].tel %>")> <span class="glyphicon glyphicon-trash"></span></button></td>
                      <!-- </a> -->
                    </tr>
              
             <% } %>
             
            </tbody></table>
          </div>
          <!-- /.box-body -->
          <div class="box-footer clearfix">
              <div class="pull-left">每页显示：
                <select name="pageNumber" id="pageNumber" onchange=changePageNumber("<%= routerType %>")>
                  
                  <option value="<%-pageNumber%>"><%-pageNumber%></option>
                  <% for(var i=6;i<11;i++) { %>
                    <option value="<%-i%>"><%-i%></option>
                  <% }%>
                </select>
              </div>
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="<%= routerType %>pageCode=<%- pageCode==1?pageCode:pageCode-1%>&pageNumber=<%-pageNumber%>">«</a></li>
                <% for(var i=0;i<totalNumber;i++) { %>
                <li class="<%- pageCode===i+1?'active':'' %>">
                  <a href="<%= routerType %>pageCode=<%- i+1 %>&pageNumber=<%-pageNumber%>"><%- i+1 %></a>
                </li>
                <% } %>
                <li><a href="<%= routerType %>pageCode=<%- pageCode==totalNumber?pageCode:pageCode+1%>&pageNumber=<%-pageNumber%>">»</a></li>
              </ul>   
          </div>
        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

 <%- include('./footer.ejs') %>

 <%-include('./sidebar.ejs') %>
<!-- ./wrapper -->
<!-- 更新模态框 -->
<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">更新昵称</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" action="/users/updateAction" method="post">
                <div class="box-body">
                  <div class="form-group">
                    <label for="tel" class="col-sm-2 control-label">手机号</label>
    
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="tel" name="tel" placeholder="tel" readonly>
                    </div>
                  </div>
                  <div class="form-group hidden">
                      <label for="pageCode" class="col-sm-2 control-label">页码</label>
      
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="pageCode" name="pageCode" placeholder="tel" readonly>
                      </div>
                    </div>
                    <div class="form-group hidden">
                        <label for="pageCode" class="col-sm-2 control-label">pageNumber</label>
        
                        <div class="col-sm-10">
                          <input type="text" class="form-control" value="<%- pageNumber %>"  name="pageNumber"  readonly>
                        </div>
                      </div>
                  <div class="form-group">
                    <label for="nickname" class="col-sm-2 control-label">昵称</label>
    
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="nickname" name="nickname" placeholder="nickname">
                    </div>
                  </div>
                  
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                  <button type="submit" class="btn btn-info pull-right">update</button>
                </div>
                <!-- /.box-footer -->
              </form>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<!-- 确认删除的Modal -->
  <div class="modal fade" tabindex="-1" role="dialog" id="remove">
      <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">确认删除</h4>
          </div>
          <div class="modal-body">
              <form class="form-horizontal" action="/users/remove" method="get">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="tel" class="col-sm-2 control-label">手机号</label>
      
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="removeTel" name="tel" placeholder="tel" readonly>
                      </div> 
                    </div>
                    <div class="form-group hidden">
                        <label for="tel" class="col-sm-2 control-label">pageCode</label>
        
                        <div class="col-sm-10">
                          <input type="text" class="form-control"  value="<%-pageCode%>" name="pageCode" readonly>
                        </div> 
                      </div>
                      <div class="form-group hidden">
                          <label for="tel" class="col-sm-2 control-label">pageNumber</label>
          
                          <div class="col-sm-10">
                            <input type="text" class="form-control" name="pageNumber" value="<%-pageNumber%>" readonly>
                          </div> 
                        </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">确认</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- 删除全部 -->
    <div class="modal fade" tabindex="-1" role="dialog" id="removeAll">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">确认删除</h4>
            </div>
            <div class="modal-body">
              <p>确认删除全部数据吗</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
              <a href='/users/removeAll?pageNumber=<%-pageNumber%>'>
                <button type="button" class="btn btn-primary">确认</button>
              </a>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
<!-- REQUIRED JS SCRIPTS -->

<!-- jQuery 2.2.3 -->
<script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="/bootstrap/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="/dist/js/app.min.js"></script>
<!-- 函数 -->
<script>
  function showModal(tel,pageCode){
    $('#myModal').modal()
    $('#tel').val(tel)
    console.log(pageCode)
    $('#pageCode').val(pageCode)
  }
  function removeModal(tel){
    $('#remove').modal()
    $('#removeTel').val(tel)
  }
  function changePageNumber(){
    window.location.href=routerType+'pageCode=1&pageNumber='+$('#pageNumber').val()
  }
  function searchFn(){
    window.location.href='/users/search?type=nickname&nickname='+$('#searchTxt').val()
  }
</script>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. Slimscroll is required when using the
     fixed layout. -->
</body>
</html>
